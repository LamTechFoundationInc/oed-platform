{
    "name": "acquia/lightning-project",
    "description": "Project template for Drupal 8 sites built with the Lightning distribution.",
    "type": "project",
    "license": "GPL-2.0+",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drush/drush": "^9.0",
        "drupal/console": "1.0.1",
        "drupal/media_entity_generic": "^1.0",
        "acquia/lightning_dev": "dev-8.x-1.x"
    },
    "require": {
        "drupal-composer/drupal-scaffold": "^2.0.0",
        "cweagans/composer-patches": "^1.6.0",
        "acquia/lightning": "~3.1.0",
        "drupal/admin_toolbar": "^1.23",
        "drupal/geolocation": "^1.11",
        "drupal/styled_google_map": "^1.2",
        "drupal/votingapi": "^3.0@alpha",
        "drupal/address": "^1.3",
        "drupal/views_simplechart": "^1.2",
        "drupal/easychart": "^3.4",
        "drupal/geophp": "^1.0@beta",
        "drupal/csv_serialization": "^1.3",
        "drupal/clamav": "^1.0",
        "drupal/login_security": "^1.3",
        "drupal/autologout": "^1.0",
        "drupal/domain_registration": "^1.3",
        "drupal/ga_login": "^1.0@alpha",
        "drupal/ultimate_cron": "^2.0@alpha",
        "drupal/message_subscribe": "^1.0@beta",
        "drupal/message": "^1.0@RC",
        "drupal/message_notify": "^1.0@beta",
        "drupal/flag": "^4.0@alpha",
        "drupal/social_post_twitter": "^1.0@beta",
        "drupal/social_api": "^1.1",
        "drupal/social_auth": "^1.0",
        "drupal/social_auth_facebook": "^1.0",
        "drupal/field_permissions": "^1.0@beta",
        "drupal/leaflet": "^1.0@beta",
        "drupal/leaflet_more_maps": "^1.0@alpha",
        "drupal/leaflet_markercluster": "^1.0@alpha",
        "drupal/adminimal_theme": "^1.3",
        "drupal/chosen": "^2.5",
        "drupal/views_bulk_operations": "^2.2",
        "drupal/consumers": "^1.0@beta",
        "drupal/contribute": "^5.0@beta",
        "drupal/entity_reference_revisions": "^1.4",
        "drupal/like_and_dislike": "^1.0@alpha",
        "drupal/geofield": "^1.0@beta",
        "drupal/easy_install": "^10.0",
        "drupal/smtp": "^1.0@beta",
        "drupal/advagg": "^3.5",
        "drupal/bulk_content_operation": "^3.0@alpha",
        "drupal/smsframework": "^1.1",
        "drupal/sms_clickatell": "^2.0",
        "drupal/sms_twilio": "^1.0",
        "drupal/sms_simplegateway": "^1.1",
        "drupal/workbench_moderation_actions": "^1.0@alpha",
        "drupal/memcache": "^2.0@alpha",
        "drupal/addtoany": "^1.9",
        "drupal/easy_breadcrumb": "^1.7",
        "drupal/metatag": "^1.5",
        "drupal/pathauto": "^1.1",
        "drupal/redirect": "^1.1",
        "drupal/webform": "^5.0@RC",
        "drupal/views_bootstrap": "^3.0",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/contentimport": "^4.1",
        "drupal/captcha": "^1.0",
        "drupal/honeypot": "^1.27",
        "drupal/antibot": "^1.2",
        "drupal/migrate_upgrade": "^3.0",
        "drupal/migrate_spreadsheet": "^1.0",
        "drupal/migrate_source_csv": "^2.1",
        "drupal/migrate_tools": "^4.0",
        "drupal/migrate_plus": "^4.0",
        "drupal/features": "^3.7",
        "drupal/config_sync": "^2.0",
        "drupal/config_distro": "^1.0",
        "drupal/config_filter": "^1.2",
        "drupal/config_provider": "^2.0",
        "drupal/config_devel": "^1.2",
        "drupal/menu_link_config": "^1.0",
        "drupal/config_tools": "^1.0",
        "drupal/config_update": "^1.5",
        "drupal/config_split": "^1.3"
    },
    "repositories": {
        "drupal": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "assets": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        "dev": {
            "type": "github",
            "url": "https://github.com/acquia/lightning-dev",
            "no-api": true
        }
    },
    "scripts": {
      "post-install-cmd": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "post-update-cmd": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
      "nuke": "rm -r -f docroot/modules/contrib docroot/profiles/contrib/lightning vendor composer.lock"
    },
    "extra": {
        "installer-types": [
            "bower-asset",
            "npm-asset"
        ],
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library",
                "type:bower-asset",
                "type:npm-asset"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "enable-patching": true
    }
}
