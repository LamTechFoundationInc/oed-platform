{#
/**
 * @file
 * Tourism+s's theme implementation to display a Service node.
 */
#}

{% extends "node.html.twig" %}
{% block meta_area %}
  {{ title_prefix }}
  {% if not page %}
    <h2{{ title_attributes.addClass('node__title') }}>
      <a href="{{ url }}" rel="bookmark">{{ label }}</a>
    </h2>
  {% endif %}
  {{ title_suffix }}
  {% if display_submitted %}
    <div class="node__meta">
      {{ author_picture }}
      <span{{ author_attributes.addClass('node__submitted-info') }}>
        {% trans %}
          <span class="node__submitted-info-text">By</span> {{ author_name }} on 
          <span class="node__submitted-date">
            {{ date }}
          </span>
        {% endtrans %}
      </span>
      {{ metadata }}
    </div>
  {% endif %}
  {% if content.field_op_location|render or content.field_op_people|render or content.field_op_cabins|render %}
  	<div class="yacht-info">
      {% if content.field_op_location|render %}
        <div class="yacht-location">
          <i class="fa fa-map-marker"></i> {{ node.field_op_location.value }}
        </div>
      {% endif %}
      {% if content.field_op_people|render or content.field_op_cabins|render %}
      <div class="yacht-people-and-cabins">
        {% if content.field_op_people|render %}
          <div class="yacht-people">
            <i class="fa fa-user"></i> {{ node.field_op_people.value }} {% trans %}People{% endtrans %}
          </div>
        {% endif %}
        {% if content.field_op_cabins|render %}
          <div class="yacht-cabins">
            <i class="fa fa-bed"></i> {{ node.field_op_cabins.value }} 
              {% if node.field_op_cabins.value == 1 %}
                {% trans %}Cabin{% endtrans %}
              {% else %}
                {% trans %}Cabins{% endtrans %}
              {% endif %}
          </div>
        {% endif %}
      </div>
      {% endif %}
  	</div>
  {% endif %}
{% endblock %}
{% block content %}
  {{ attach_library('openelections/node-service') }}
  {{ content|without('field_op_location','field_op_people','field_op_cabins') }}
{% endblock %}
